---
import type { Sponsors } from '../types/sponsors'

import { SPONSORS } from '../consts/sponsors'

const firstRow = SPONSORS.slice(0, 5)
const secondRow = SPONSORS.slice(5)
---

<section id="sponsors" class="mx-auto max-w-xl mb-10">
  <h2 class="text-center text-4xl font-light">
    <div class="block sm:inline">
      <strong>Patrocinadores del evento</strong>
    </div>
  </h2>

  <div>
    
  </div>

  <div class="flex flex-col-reverse items-center justify-center gap-8 py-2">
    <div class="flex w-1/2 max-w-md flex-wrap justify-evenly gap-8 md:w-[100%] md:flex-row md:justify-around md:gap-5">
      {
        firstRow.map(({ name, url, image, label }) => (
          <a 
            href={url}
            target="_blank"
            aria-label={label ?? name}
            class="flex size-14 items-center justify-center transition hover:scale-125"
          >
            <image.logo 
            width={image.width}
            height={image.height}
            class="h-14 w-auto"/>
          </a>
        ))
      }
    </div>

    <div class="flex w-1/2 max-w-md flex-wrap justify-evenly gap-8 md:w-[100%] md:flex-row md:justify-around md:gap-5">
      {
        secondRow.map(({ name, url, image, label }) => (
          <a 
            href={url}
            target="_blank"
            aria-label={label ?? name}
            class="flex size-14 items-center justify-center transition hover:scale-125"
          >
            <image.logo 
            width={image.width}
            height={image.height}
            class="h-14 w-auto"/>
          </a>
        ))
      }
    </div>
  </div>
</section>